<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MicroNotes"
             x:Class="MicroNotes.App"
			 RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme/>
		<StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
    </Application.Styles>
	
	<Application.Resources>
		<FontFamily x:Key="EditorFont">/Assets/fonts/OpenSans-Regular.ttf#Open Sans</FontFamily>
		<FontFamily x:Key="EditorFontBold">/Assets/fonts/OpenSans-Bold.ttf#Open Sans</FontFamily>		
		<FontFamily x:Key="StandardFont">/Assets/fonts/OpenSans-Regular.ttf#Open Sans</FontFamily>
		<FontFamily x:Key="StandardFontBold">/Assets/fonts/OpenSans-Bold.ttf#Open Sans</FontFamily>
	</Application.Resources>
</Application>